<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Gossip update process failed due to:</p>
      <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="header">
	<h1> Editer le Gossip num√©ro <%=@gossip.id%></h1>
</div>

<%= form_for @gossip do |f| %>
