    <%= f.text_field :title, class: 'form-control', placeholder: 'Title'%>
    <%= f.text_field :content, class: 'form-control', placeholder: 'Content'%>
  </div>
  <div class="form-group">
	<button type="submit" class="btn btn-secondary"> Editer le potin </button>
  </div>
<% end %>
