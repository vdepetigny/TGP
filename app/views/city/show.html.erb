<div class="card text-center mt-3">
  <div class="card-header">
	<h1>Gossips de la ville <%= @city.name %></h1>
  </div>
<div class="row mt-3">
  <% @gossips.each do |gossip| %>
	<div class="card mx-auto mb-5" style="width: 30rem;">
	  <div class="card-body">
		<h5 class="card-title"><%= gossip.title %></h5>
		<p class="card-text"><%= gossip.content %></p>
		<p class="card-text text-primary"><%= gossip.user.first_name %> <%= gossip.user.last_name %></p>
		<p class="card-text font-italic">Gossip <%= gossip.id %></p>
		<%= link_to "Voir le potin", gossip_path(gossip.id), class: "btn btn-secondary"%>
		<%= link_to "Profil de l'auteur", user_path(gossip.user.id), class: "btn btn-secondary" %>
	  </div>
	</div>
  <%end%>
</div>
	
