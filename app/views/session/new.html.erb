<% if flash.now[:danger] %>
  <div class="alert alert-danger" role="alert">
   <div class="notice"> 
     <%=flash.now[:danger] %>
     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
     </button>
   </div>
  </div>
<% end %>

<%= form_tag session_index_path, method: "post" do %>
  <%= text_field_tag 'email', '', class: 'form-control', placeholder: 'Email'%>
  <%= password_field_tag 'password', '', class: 'form-control', placeholder: 'Password'%></br>
  <%= submit_tag "Login", class: "btn btn-info" %>
<% end %></br>

<%= link_to "Sign in", new_user_path, class: "btn btn-secondary"%>